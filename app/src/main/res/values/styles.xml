<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Camera" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="AppTheme.CameraFab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="background">@color/colorAccent</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:layout_margin">8dp</item>
        <item name="elevation">10dp</item>
        <item name="layout_insetEdge">top</item>
        <item name="rippleColor">@android:color/white</item>
    </style>
</resources>
